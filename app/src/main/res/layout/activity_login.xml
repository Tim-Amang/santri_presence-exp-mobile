<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="119dp"
        android:layout_height="108dp"
        app:srcCompat="@drawable/santi_presence_icon"
        tools:layout_editor_absoluteX="146dp"
        tools:layout_editor_absoluteY="135dp"
        tools:ignore="MissingConstraints" />


    <TextView
        android:id="@+id/textView"
        android:layout_width="163dp"
        android:layout_height="29dp"
        android:text="Masuk Sebagai Santri"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="16dp"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="253dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="163dp"
        android:layout_height="29dp"
        android:text="Login menguunakan NIM PESANTREN !"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="8dp"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="273dp"
        tools:ignore="MissingConstraints" />


    <EditText
        android:id="@+id/editTextTextEmailAddress"
        android:layout_width="210dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="NIM"
        android:inputType="textEmailAddress"
        android:textSize="8dp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="302dp"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/editTextNumberPassword"
        android:layout_width="210dp"
        android:layout_height="42dp"
        android:ems="10"
        android:hint="Password"
        android:inputType="numberPassword"
        android:textSize="8dp"
        tools:layout_editor_absoluteX="101dp"
        tools:layout_editor_absoluteY="345dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button2"
        android:layout_width="209dp"
        android:layout_height="42dp"
        android:background="#4EBD23"
        android:text="Masuk"
        android:textColor="#F3F3F3"
        tools:layout_editor_absoluteX="102dp"
        tools:layout_editor_absoluteY="407dp"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="163dp"
        android:layout_height="29dp"
        android:text="Apakah kamu seorang Pengurus?"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="8dp"
        tools:layout_editor_absoluteX="124dp"
        tools:layout_editor_absoluteY="457dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/button3"
        android:layout_width="86dp"
        android:layout_height="25dp"
        android:background="#4EBD23"
        android:text="Pengurus"
        android:textColor="#F3F3F3"
        android:textSize="8dp"
        tools:layout_editor_absoluteX="162dp"
        tools:layout_editor_absoluteY="486dp"
        tools:ignore="MissingConstraints" />


</androidx.constraintlayout.widget.ConstraintLayout>